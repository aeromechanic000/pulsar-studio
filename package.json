{
  "name": "pulsar-agent-turbo",
  "version": "0.1.0",
  "description": "LLM-driven agent with modular architecture for task planning and execution",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "cli": "node dist/cli.js",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build",
    "desktop:dev": "npm run tauri:dev:npx -w apps/desktop",
    "desktop:build": "npm run tauri build -w apps/desktop",
    "desktop:tauri": "npm run tauri -w apps/desktop"
  },
  "bin": {
    "pulsar-agent-turbo": "dist/cli.js"
  },
  "keywords": [
    "ai",
    "agent",
    "llm",
    "automation",
    "planning",
    "nodejs"
  ],
  "author": "pulsar-agent-turbo Contributors",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "i18next": "^25.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "react-i18next": "^16.2.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
